{
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"target": "es2022",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"useUnknownInCatchVariables": false,
		"module": "node16",
		"moduleResolution": "node16",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react",
		"downlevelIteration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"es2016"
		],
		"baseUrl": "./",
		"paths": {
			"~/src/*": [
				"src/*"
			]
		}
	},
	"include": [
		"./src/**/*",
		"./tools/**/*",
		"./tests/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.js"
	]
}
